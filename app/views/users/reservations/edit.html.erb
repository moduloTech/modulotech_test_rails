<div class="container-fluid">
  <h1>Edit reservation</h1>

  <div class="container-sm">
    <%= form_with(model: @reservation, url: my_reservation_path(@reservation)) do |form| %>
      <% if @reservation.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@reservation.errors.count, 'error') %> prohibited this section from being saved:</h2>

          <ul>
            <% @reservation.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <div class="mb-3">
          <%= form.label(:check_in, 'Check in', class: 'form-label') %>
          <%= form.date_field(:check_in, class: 'form-control') %>
        </div>
        <div class="mb-3">
          <%= form.label(:check_out, 'Check out', class: 'form-label') %>
          <%= form.date_field(:check_out, class: 'form-control') %>
        </div>
        <%= form.submit('Save', class: 'btn btn-success') %>
      </div>
    <% end %>
  </div>
</div>
