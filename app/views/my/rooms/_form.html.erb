<%= form_with(model: @room, url: @room.persisted? ? my_room_path(@room) : my_rooms_path, local: true) do |form| %>
  <%= render partial: 'shared/error', locals: { object: @room } %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <% if @room.images.attached? %>
    <div class="form-group">
      <%= form.label :images, class: 'd-block' %>
      <% @room.images.each do |image| %>
        <%= image_tag image, class: 'img-preview' %>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, accept: 'image/*', class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= form.label :price_per_night_cents %>
    <%= form.number_field :price_per_night_cents, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price_per_night_currency %>
    <%= form.text_field :price_per_night_currency, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
