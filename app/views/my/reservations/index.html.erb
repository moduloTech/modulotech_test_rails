<div class="container">
  <h1>My Reservations</h1>

  <table class="table">
    <thead class="thead-dark">
    <tr>
      <th>Room</th>
      <th>Check-in</th>
      <th>Check-out</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.room.name %></td>
        <td><%= reservation.check_in %></td>
        <td><%= reservation.check_out %></td>
        <td>
          <%= link_to 'Show', my_reservation_path(reservation), class: 'btn btn-primary btn-sm' %>
        </td>
        <td>
          <%= link_to 'Edit', edit_my_reservation_path(reservation), class: 'btn btn-secondary' %> |
        </td>
        <td>
          <%= link_to 'Destroy', my_reservation_path(reservation), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>