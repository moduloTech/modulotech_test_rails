<div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4" id="<%= dom_id room %>">
    <div class="card" onclick="Turbo.visit('<%= room_path(room) %>', { action: 'replace', frame: 'room_details' })">
    <div id="carousel<%= dom_id room %>" class="carousel slide">
      <%= render partial: 'carousel', locals: { room: room } %>
      <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= dom_id room %>" data-bs-slide="prev" onclick="event.stopPropagation();">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= dom_id room %>" data-bs-slide="next" onclick="event.stopPropagation();">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <div class="card-block">
      <h4 class="card-title"><%= room.name %></h4>
      <p class="card-text">Location: <%= room.location %></p>
      <p class="card-text">Capacity: <%= room.capacity %></p>
      <p class="card-text"><%= humanized_money_with_symbol(room.price_per_night_cents) %> per night</p>
    </div>
  </div>
</div>
